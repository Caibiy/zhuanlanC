<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewContainer"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="1dp">
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<de.hdodenhof.circleimageview.CircleImageView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_android_ImLogo"
    android:layout_width="66dp"
    android:layout_height="66dp"
    app:civ_border_width="1dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:src="@drawable/log2"
    android:layout_centerVertical="true"
    app:civ_border_color="#FF000000"
    android:layout_alignParentLeft="true"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Android"
    android:layout_toRightOf="@id/fragment_android_ImLogo"
   android:layout_alignParentBottom="true"
    android:layout_marginBottom="3dp"
    android:id="@+id/fragment_android_TvCato"
    />
    <TextView
        android:layout_toRightOf="@id/fragment_android_TvCato"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="30dp"
        android:text="|"
        android:id="@+id/fragment_android_TvGe"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="3dp"
        android:layout_alignParentBottom="true"
        android:text="2016/12/02"
        android:id="@+id/fragment_android_TvDate"
        android:layout_toRightOf="@id/fragment_android_TvGe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fragment_android_TvTitle"
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/fragment_android_ImLogo"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"/>
    <TextView
        android:text=".....Simple"
        android:layout_toRightOf="@id/fragment_android_ImLogo"
        android:layout_below="@id/fragment_android_TvTitle"
        android:id="@+id/fragment_android_TvIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>

</android.support.v7.widget.CardView>
