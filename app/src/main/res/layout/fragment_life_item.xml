<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="2dp"
    android:id="@+id/cardViewContainer"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/log1"
            android:id="@+id/fragment_life_item_Image"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <TextView
            android:layout_below="@id/fragment_life_item_Image"
            android:id="@+id/fragment_life_item_Title"
            android:text="对人生的一些感悟"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@id/fragment_life_item_Title"
            android:id="@+id/fragment_life_item_Intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="少说多做...少说多做...少说多做...少说多做...少说多做...少说多做..."
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>